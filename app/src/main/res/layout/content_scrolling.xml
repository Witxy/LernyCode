<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".MainActivity"
    tools:showIn="@layout/fragment_teach">




   <TableLayout

       android:layout_width="match_parent"
       android:layout_height="match_parent"
      android:stretchColumns="*"
       android:baselineAligned="false"
      >

      <TableRow
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:weightSum="1">

         <TextView
             android:id="@+id/groupFirst"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:layout_span="2"
             android:background="@color/yellow"
             android:text="@string/group1"
             android:textAlignment="center"
             android:textColor="@color/black"/>

      </TableRow>





      <TableRow
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:weightSum="1">

         <Button

             android:id="@+id/button_1"
             android:layout_height="80dp"
             android:layout_width="0dp"
             android:layout_column="0"

             android:text="@string/button1"
             android:background="@drawable/teach_buttoninactive"
             android:textSize="12sp"
             android:textColor="@color/black"
             android:layout_marginLeft="10dp"
             android:layout_marginRight="10dp"
             android:layout_marginTop="20dp"
             android:layout_marginBottom="20dp"
             android:textColorHint="@color/black"
             android:onClick="teachType"
             android:tag="1"

             style="?android:attr/buttonBarButtonStyle"
             />

      </TableRow>


      <TableRow
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:weightSum="1">

         <TextView
             android:id="@+id/groupSecond"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:layout_span="2"
             android:background="@color/yellow"
             android:text="@string/group2"
             android:textAlignment="center"
             android:textColor="@color/black"/>

      </TableRow>



      <TableRow
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:weightSum="1">

         <Button
             android:id="@+id/button_2"
             android:layout_width="0dp"
             android:layout_height="80dp"
             android:layout_column="0"
             android:layout_marginLeft="10dp"
             android:layout_marginTop="20dp"
             android:layout_marginRight="10dp"
             android:layout_marginBottom="20dp"
             android:background="@drawable/teach_buttoninactive"
             android:onClick="teachType"
             android:tag="2"
             android:text="@string/button2"
             android:textColor="@color/black"
             android:textColorHint="@color/black"
             android:textSize="12sp" />

         <Button
             android:id="@+id/button_3"
             android:layout_height="80dp"
             android:layout_width="0dp"
             android:layout_column="1"
             android:text="@string/button3"
             android:textSize="12sp"
             android:textColor="@color/black"
             android:background="@drawable/teach_buttoninactive"
             android:layout_marginLeft="10dp"
             android:layout_marginRight="10dp"
             android:layout_marginTop="20dp"
             android:layout_marginBottom="20dp"
             android:textColorHint="@color/black"
             android:onClick="teachType"
             android:tag="3"
             />

      </TableRow>


      <TableRow
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:weightSum="1">

         <Button
             android:id="@+id/button_4"
             android:layout_height="80dp"
             android:layout_width="0dp"
             android:layout_column="0"
             android:text="@string/button4"
             android:textSize="12sp"
             android:textColor="@color/black"
             android:background="@drawable/teach_buttoninactive"
             android:layout_marginLeft="10dp"
             android:layout_marginRight="10dp"
             android:layout_marginTop="20dp"
             android:layout_marginBottom="20dp"
             android:textColorHint="@color/black"
             android:onClick="teachType"
             android:tag="4"
             />

         <Button
             android:id="@+id/button_5"
             android:layout_height="80dp"
             android:layout_width="0dp"
             android:layout_column="0"
             android:text="@string/button5"
             android:textSize="12sp"
             android:textColor="@color/black"
             android:background="@drawable/teach_buttoninactive"
             android:layout_marginLeft="10dp"
             android:layout_marginRight="10dp"
             android:layout_marginTop="20dp"
             android:layout_marginBottom="20dp"
             android:textColorHint="@color/black"
             android:onClick="teachType"
             android:tag="5"
             />


      </TableRow>


      <TableRow
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:weightSum="1">

         <TextView
             android:id="@+id/groupThird"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:layout_span="2"
             android:background="@color/yellow"
             android:text="@string/group3"
             android:textAlignment="center"
             android:textColor="@color/black"/>

      </TableRow>

      <TableRow
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:weightSum="1">

         <Button
             android:id="@+id/button_16"
             android:layout_width="0dp"
             android:layout_height="80dp"
             android:layout_column="0"
             android:layout_marginLeft="10dp"
             android:layout_marginTop="20dp"
             android:layout_marginRight="10dp"
             android:layout_marginBottom="20dp"
             android:background="@drawable/teach_buttoninactive"

             android:text="@string/button16"
             android:textColor="@color/black"
             android:textColorHint="@color/black"
             android:textSize="12sp"
             android:onClick="teachType"
             android:tag="6"/>

         <Button
             android:id="@+id/button_17"
             android:layout_height="80dp"
             android:layout_width="0dp"
             android:layout_column="1"
             android:text="@string/button17"
             android:textSize="12sp"
             android:textColor="@color/black"
             android:background="@drawable/teach_buttoninactive"
             android:layout_marginLeft="10dp"
             android:layout_marginRight="10dp"
             android:layout_marginTop="20dp"
             android:layout_marginBottom="20dp"
             android:textColorHint="@color/black"
             android:onClick="teachType"
             android:tag="7"
             />

      </TableRow>



   </TableLayout>


